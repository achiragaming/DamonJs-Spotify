{
  "compilerOptions": {
    "target": "es2016",
    "resolveJsonModule": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "rules": {
    "unified-signatures": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "test",
    "node_modules/**",
    "test/**",
    "/node_modules/"
  ]
}