{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "rules": {
    "unified-signatures": false
  },
  "include": ["src", "package.json", "Index.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "test", "node_modules/**", "test/**", "/node_modules/"]
}
